//this sets the size of the popup
size(500, 800);

//this sets the background color
background(#03fcde);

//this draws the bottom ellipse
ellipse(250,600,300,275);

//this draws the middle ellipse
ellipse(250,385,225,200);

//this draws the top ellipse
ellipse(250,215,175,175);

//this makes the next shapes black
fill(#000000);

//this draws the bottom button
ellipse(250,440,15,15);

//this draws the middle button
ellipse(250,390,15,15);

//this draws the top button
ellipse(250,340,15,15);

//this draws the left eye
ellipse(225,190,10,10);

//this draws the right eye
ellipse(275,190,10,10);

//this draws the bottom part of the hat
rect(150,125,200,20);

//this draws the top part of the hat
rect(180,50,140,80);

//this makes the next shape orange
fill(#FFA30D);

